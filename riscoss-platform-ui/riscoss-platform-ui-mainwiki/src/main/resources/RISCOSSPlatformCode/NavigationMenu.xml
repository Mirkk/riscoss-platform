      var element = newScopeActionElements[i];
      element.observe('click', function(event) {
        XWiki.RISCOSSPlatform.openCreateScopeDialog();
      });
    }
    
    
    var bindNewEntityAction = function(element, scopeName, scopeId) {
      element.observe('click', function(event) {
        XWiki.RISCOSSPlatform.openCreateEntityDialog(scopeName, scopeId);
      });
    };
    
    var newEntityActionElements = $$('a.newEntityAction');
    for(i = 0; i &lt; newEntityActionElements.length; i++) {
      var element = newEntityActionElements[i];
      if(element.getAttribute('scope')) {
        var stringComponents = element.getAttribute('scope').split('|');
        var scopeTitle = stringComponents[0];
        var scopeId = stringComponents[1];
        
        bindNewEntityAction(element, scopeTitle, scopeId);
      
      }
    }
  }
  
  (XWiki.domIsLoaded &amp;&amp; init()) || document.observe('xwiki:dom:loaded', init);
  
  return XWiki;
}(XWiki || {}));</code>
